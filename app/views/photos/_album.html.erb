<script type="text/javascript" src="/html5lightbox/html5lightbox.js"></script>
<% if ! @photos.empty? %>
	<% @photos.each do |photo| %> 
		<% if photo.media == "video" %>
			<a href="<%= flickr.photos.getSizes(:photo_id => photo.id).size[10].source %>" class="html5lightbox" data-width="<%= flickr.photos.getSizes(:photo_id => photo.id).size[10].width %>" data-height="<%= flickr.photos.getSizes(:photo_id => photo.id).size[10].height %>" title="<%= photo.title %>"  data-group="mygroup">
				<img src="<%= make_flickr_url(photo, 's') %>"  class="img-rounded"/>
				<img src="/assets/video.png" style="position:absolute; margin-left:-80px;" />
			</a>
			
		<% else %>
			<a href="<%= make_flickr_url(photo, 'c') %>" class="html5lightbox" title="<a target='_blank' href='/services/original/<%= photo.id %>'>Download the original</a>"  data-group="mygroup">
				<img src="<%= make_flickr_url(photo, 's') %>"  class="img-rounded"/>
			</a>
		<% end %>
	<% end %>
<% else %>
NO PHOTOS
<% end %>